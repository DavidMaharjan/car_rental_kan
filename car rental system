#include<iostream>
#include<stdlib.h>
#include<conio.h>
#include<dos.h>
#include<unistd.h>
#include<fstream>
using namespace std;
class admin{
	private:
		string password="";
	public:
		void loginadmin();
		void option();
		void addcars();
		void removecars();
		
};
void admin::loginadmin()
{
   char ch;
   cout<<"\n\n\n\n\n\n\n\n\t\t\t\t\t       CAR RENTAL SYSTEM \n\n";
   cout<<"\t\t\t\t\t------------------------------";
   cout<<"\n\t\t\t\t\t\t     LOGIN \n";	
   cout<<"\t\t\t\t\t------------------------------\n\n";	
   cout << "\t\t\t\t\tEnter Password: ";
   ch = _getch();
   while(ch != 13){
      password.push_back(ch);
      cout << '*';
      ch = _getch();
   }
   if(password == "pass"){
      cout << "\n\n\n\t\t\t\t\t\tAccess Granted! \n";
      system("PAUSE");
      system ("CLS");
      option();
   }else{
      cout << "\n\n\t\t\t\t\t\t\tAccess Aborted...\n\t\t\t\t\t\t\tPlease Try Again\n\n";
      system("PAUSE");
      system("CLS");
      loginadmin();
   }
}
void admin::option()
{
	cout<<"Enter option :"<<endl;
	cout<<"1:addcar"<<endl;
	cout<<"2:removecar"<<endl;
	cout<<"3:exit"<<endl;
	int op;
	cin>>op;
	switch(op)
	{
		case 1:
			addcars();
			break;
			case 2:
				removecars();
				break;
				case 3:
					exit(1);
					break;
					default:
						cout<<"Invalid input";
						option();
						break;
	}
	
}
void admin::addcars()
{
	cout<<"Add cars";
}
void admin::removecars()
{
	cout<<"remove cars";
}
