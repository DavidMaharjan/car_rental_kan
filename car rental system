#include<iostream>
#inlude<conio.h>
#include<fstream>
using namespace std;
class admin{
};
class customer
{
    void customerData()
{
	ifstream ifs;
	ifs.open("Customer.txt");
	int custNum = 0;
	
	while (!ifs.eof())
	{
		ifs >> cust[custNum].id;
		ifs.ignore();
		ifs.getline(cust[custNum].name,100,';');
		ifs.getline(cust[custNum].phone,15,';');
		ifs.getline(cust[custNum].ic,15,';');
		ifs.getline(cust[custNum].address,1500);
		custNum++;
	}
	
	ifs.close();
}
};
